@model AddFundsViewModel


<head>

    <link href='https://fonts.googleapis.com/css?family=Roboto:400,300,100' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="~/css/addfunds.css">
</head>

<h3>Current balance: @Model.CurrentBalance$</h3>
<form class="credit-card" method="post">
    <div class="form-header">
        <h4 class="title">Bank account details</h4>
    </div>

    <div class="form-body">
        <!-- Card Number -->
        <input asp-for="BankAccount" type="text" class="card-number" placeholder="Bank Account">
        <span asp-validation-for="BankAccount" class="text-danger"></span>

        <div class="form-group">
            <label asp-for="Amount"></label>
            <input asp-for="Amount" class="form-control" />
            <span asp-validation-for="Amount" class="text-danger"></span>
        </div>

        <!-- Buttons -->
        <button type="submit" class="btn btn-default">Proceed</button>
    </div>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
